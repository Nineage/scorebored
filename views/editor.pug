<!doctype html>
<html>
<head>
    <title>ScoreBored Editor</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="style.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
</head>

<body>
    <div style="text-align:center">
        <h1>ScoreBored</h1>
    </div>
    <div id="sports-choice">
    <h4>Select Sport:</h4>
        div!= sportList
    </div>
    <div id="games"></div>
        <!-- Main Start -->
    <main class="container" id="home-main-content">
        <div class="row" id="editor-container">
            <div class="col-md-5 col-lg-5" id="game-menu">
                <h3>Games</h3>
                <ol id="game-list"></ol>
                <button class="btn btn-primary hidden" id="new-game">Add a new game</button>
            </div>
            <div class="col-md-7 col-lg-7 hidden" id="game-editor">
                <h3>Edit Game</h3>
                <form method="post" action="/edit/update">
                    <input type="hidden" id="id" name="id" value="">
                    <input type="hidden" class="sport" name="sport" value="">
                    <span>Opponent: </span><input id="opponent" type="text" name="opponent" value=""></input><br />
                    <span>DHS Score: </span><input id="dhsScore" type="number" name="dhsScore" value=""></input><br />
                    <span>Opponent Score: </span><input id="oppScore" type="number" name="oppScore" value=""></input><br />
                    <span>Link: </span><input id="link" type="text" name="link" value=""></input><br />
                    <input class="btn btn-success" id="submit-btn" type="submit" name="submit" value="Submit"></input>
                </form>
            </div>
            <div class="col-md-7 col-lg-7 hidden" id="new-game-editor">
                <h3>Add a New Game</h3>
                <form method="post" action="/edit/add">
                    <input type="hidden" class="sport" name="sport" value="">
                    <span>Month: </span><input id="month" type="number" name="month" value=""></input><br />
                    <span>Day: </span><input id="day" type="number" name="day" value=""></input><br />
                    <span>Time: </span><input id="time" type="string" name="time" value=""></input><br />
                    <span>Opponent: </span><input id="opponent2" type="text" name="opponent" value=""></input><br />
                    <input class="btn btn-success" id="submit-btn" type="submit" name="submit" value="Submit"></input>
                </form>
            </div>
        </div>
    </main>
    <!--Main End -->
</body>
    <script src="scripts.js" type="text/javascript"></script>
</html>